<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <corners
                android:bottomLeftRadius="6sp"
                android:bottomRightRadius="6sp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="#50363636" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <corners
                android:bottomLeftRadius="6sp"
                android:bottomRightRadius="6sp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp" />

            <gradient
                android:angle="90"
                android:centerColor="#FFFFFF"
                android:centerY="0.5"
                android:endColor="#FFFFFF"
                android:startColor="#F0F0F0"
                android:type="linear" />
        </shape>
    </item>

</layer-list>