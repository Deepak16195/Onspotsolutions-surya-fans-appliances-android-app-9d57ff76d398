<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@color/white"
    android:gravity="left|center_vertical"
    android:orientation="vertical"
    android:visibility="visible">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageView_drawer_header"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/surya_logo"
        android:clickable="false" />

    <TextView
        android:id="@+id/textView_drawer_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/drawer_header_text"
        android:textColor="@color/log_colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textView_drawer_header_government"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/drawer_header_text_gov"
        android:textColor="@color/log_colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <!--header_bg_red_3-->
    <!--android:layout_gravity="center_horizontal|top"-->
</LinearLayout>