<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    tools:context="com.surya.onspot.FragmentRetailerReplacement">

    <LinearLayout
        android:id="@+id/linearLayout_start_scanning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:visibility="visible">

        <Button
            android:id="@+id/button_scan_old_code"
            style="@style/home_screen_button_style"
            android:layout_marginTop="20dp"
            android:text="Scan Old Code" />

        <Button
            android:id="@+id/button_scan_new_code"
            style="@style/home_screen_button_style"
            android:layout_marginTop="20dp"
            android:text="Scan New Code" />

        <Button
            android:id="@+id/button_submit"
            style="@style/home_screen_button_style"
            android:layout_marginTop="20dp"
            android:text="Submit" />

    </LinearLayout>

</RelativeLayout>
